<idea-plugin version="2" url="https://github.com/bodiam/idea-ionic">
    <id>nl.jworks.intellij.ionic</id>
    <name>Ionic Framework</name>
    <version>0.1</version>
    <vendor email="erik.pragt@jworks.nl" url="http://www.jworks.nl">Jworks</vendor>

    <description><![CDATA[
      <p><a href="http://ionicframework.com/">Ionic Framework</a> support for IntelliJ platform.<p>
      <p>Ionic makes it incredibly easy to build beautiful and interactive mobile apps using HTML5 and AngularJS.
      <br />
      <p><a href="https://github.com/bodiam/idea-ionic">Documentation / list of snippets</a></p>
      <p>Follow me on Twitter: <a href="https://twitter.com/epragt"><b>@epragt</b></a></p>
    ]]></description>

    <change-notes><![CDATA[
        0.1 Initial release
    ]]>
    </change-notes>

    <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
    <idea-version since-build="131"/>

    <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
         on how to target different products -->
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <defaultLiveTemplatesProvider implementation="com.intellij.plugin.ionic.IonicTemplatesProvider"/>
    </extensions>

    <application-components>
        <!-- Add your application components here -->
    </application-components>

    <project-components>
        <!-- Add your project components here -->
    </project-components>

    <actions>
        <!-- Add your actions here -->
    </actions>

</idea-plugin>